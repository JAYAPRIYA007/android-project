<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ui.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.example.ui.LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
        <activity
            android:name="com.example.ui.ShopActivity"
            android:label="@string/title_activity_shop" >
        </activity>
        <activity
            android:name="com.example.ui.ShoplistActivity"
            android:label="@string/title_activity_shoplist" >
        </activity>
        <activity
            android:name="com.example.ui.BuyActivity"
            android:label="@string/title_activity_buy" >
        </activity>
        <activity
            android:name="com.example.ui.BuyitemActivity"
            android:label="@string/title_activity_buyitem" >
        </activity>
        <activity
            android:name="com.example.ui.WaletActivity"
            android:label="@string/title_activity_walet" >
        </activity>
    </application>

</manifest>
